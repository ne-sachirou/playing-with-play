# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Users
POST    /users                      controllers.UsersController.create()
GET     /users/{userId}             controllers.UsersController.show(userId: String)
PATCH   /users/me                   controllers.UsersController.update(userId: String)
DELETE  /users/me                   controllers.UsersController.delete(userId: String)

# Sessions
POST    /sessions                   controllers.SessionsController.create()
DELETE  /sessions/me                controllers.SessionsController.delete()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
